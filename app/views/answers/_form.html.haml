= form_for(@answer) do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :reply
    %br/
    = f.text_field :reply
  .field
    = f.label :member_id
    %br/
    = f.text_field :member_id
  .field
    = f.label :questionnaire_id
    %br/
    = f.text_field :questionnaire_id
  .actions
    = f.submit
