%p#notice= notice
%h1 メンバー一覧
%table
  %thead
    %tr
      %th Name
      %th Name kana
      %th Section
      %th Note
      %th Email
      %th Url
      %th{:colspan => "3"}
  %tbody
    - @members.each do |member|
      %tr
        %td= member.name
        %td= member.name_kana
        %td= member.section
        %td= member.note
        %td= member.email
        %td= member.url
        %td= link_to 'Show', member
        %td= link_to 'Edit', edit_member_path(member)
        %td= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to '', new_member_path
